{
    "manifest_version": 2,
    "name": "wikiFox",
    "version": "1.0",
    "description": "",
    "permissions": [
        "menus",
        "contextMenus",
        "notifications",
        "activeTab",
        "tabs",
        "storage",
        "clipboardWrite"
    ],
    "options_ui": {
        "page": "static/options.html",
        "browser_style": true
    },
    "default_locale": "pl",
    "content_scripts": [
        {
            "matches": [
                "https://pl.wikisource.org/wiki/*"
            ],
            "js": [
                "content/wikisource.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*.wikipedia.org/*"
            ],
            "js": [
                "content/wikipedia.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*.wiktionary.org/*"
            ],
            "js": [
                "content/add-copy-button.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://pl.wiktionary.org/w/index.php*"
            ],
            "js": [
                "content/modify-wiktionary-form.js",
                "content/add-form-events.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "utils/tooltip.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background/script.js"
        ]
    }
}