  "type": "module",
  "scripts": {
    "build:watch": "tsc --watch",
    "package": "web-ext build",
    "postbuild": "cp manifest.json dist && cp -R _locales dist && cp -R static dist",
    "clean": "rm -rf dist/*",
    "build:extension": "tsc --project tsconfig.json",
    "build:scripts": "tsc --project scripts/tsconfig.json",
    "cleanup": "node scripts/cleanup.cjs",
    "build": "npm run build:extension && npm run cleanup",
    "dev": "npm run build && web-ext run --source-dir=dist"
  },
  "devDependencies": {
    "@types/firefox-webext-browser": "^143.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.9.3",
    "web-ext": "^9.2.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  }
